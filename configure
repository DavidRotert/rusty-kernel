#!/bin/sh

CONFIG='# Do not edit this file manually!
PROJECTNAME=librusty_kernel

SRCDIR=src

ARCH=i386

QEMU_ARCH=i386
QEMU_EXEC=qemu-system-$(QEMU_ARCH)

RELEASE=debug

TARGETDIR=target/$(ARCH)/$(RELEASE)

CC=gcc
CCARCHFLAG=-m32
CFLAGS=$(CCARCHFLAG) -std=gnu99 -ffreestanding -O2 -Wall -Wextra

AS=as
ASARCHFLAG=--32
ASFLAGS=$(ASARCHFLAG)

LN=ld
LNARCH=i386
LNTYPE=elf
LNARCHTYPE=$(LNTYPE)_$(LNARCH)
LNFLAGS=-m $(LNARCHTYPE)
LNFLAGS+=-nostdlib
'

echo "$CONFIG" > make.conf
